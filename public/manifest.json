{
  "name": "Chrome Extension Boilerplate",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Chrome Boilerplate with CRA.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./main.js"],
      "css": ["/main.css"]
    }
  ],
  "browser_action": {
    "default_popup": "./popup.html"
  },
  "permissions": ["storage"]
}
